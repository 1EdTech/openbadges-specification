{
  "@context": {
    "obi": "http://standard.openbadges.org/definitions#",
    "assertion": "obi:Assertion",
    "badgeclass": "obi:BadgeClass",
    "issuerorg": "obi:Issuer",
    "extension": "http://openbadges.org/extensions#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "schema": "http://schema.org/",
 
    "name": { "@id": "schema:name", "@type": "xsd:string" },
    "description": { "@id": "schema:description", "@type": "xsd:string" },
    "type": { "@id": "obi:type", "type": "xsd:string" },
    "url": { "@id": "schema:url", "@type": "@id" },
    "image": { "@id": "obi:image", "@type": "@id" },
    "_location": "@id",
 
    "uid": { "@id": "assertion:Uid", "type": "xsd:string" },
    "recipient": { "@id": "assertion:Recipient" },
    "hashed": { "@id": "obi:hashed", "type": "xsd:boolean" },
    "salt": { "@id": "obi:salt", "@type": "xsd:string" },
    "identity": { "@id": "obi:identityHash" },
    "issued_on": { "@id": "assertion:IssueDate", "@type": "xsd:dateTime" },
    "expires": { "@id": "assertion:ExpirationDate", "@type": "xsd:dateTime" },
    "evidence": { "@id": "assertion:Evidence", "@type": "@id" },
    "verify": { "@id": "assertion:VerificationObject", "@type": "@id" },
 
    "badge": { "@id": "badgeclass", "@type": "badgeclass" },
    "criteria": { "@id": "badgeclass:Criteria", "@type": "@id" },
    "tags": { "@id": "badgeclass:Tags", "@type": "schema:keywords" },
    "alignment": { "@id": "badgeclass:Alignment" },
 
    "issuer": { "@id": "issuerorg", "@type": "issuerorg" },
    "email": { "@id": "schema:email", "@type": "schema:email" },
    "revocationList": { "@id": "issuerorg:RevocationList", "@type": "@id" }
 
  },
  "obi:validation": [
    {
      "obi:validatesType": "assertion",
      "obi:validationSchema": "http://standard.openbadges.org/0.5/schema/backpack_error_assertion.json"
    }
  ]
}