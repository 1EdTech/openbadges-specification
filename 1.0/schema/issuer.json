{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "1.0-compliant assertion w/linked Badge Class",
    "description": "The 1.0 OBI specification mandates that the issuer be an object linked from the Badge Class. Only a name and url are required.",
    "type": "object",
    "definitions": {
        "ImageDataUrl": { 
            "type": "string",
            "pattern": "^data:"
        },
        "BadgeImage": {
            "oneOf": [
                { "$ref": "#/definitions/ImageDataUrl" },
                { "type": "string", "format": "uri" }
            ]
        }
    },
    "properties": {
        "name": {  
            "description": "Human-readable name of the issuing entity.",
            "type": "string"
        },
        "url": {  "type": "string", "format": "uri" },
        "name": {  
            "description": "Human-readable name of the issuing entity.",
            "type": "string"
        },
        "email": { "type": "string", "format": "email" },
        "revocationList": { "type": "string", "format": "uri" }
    },
    "required": ["name", "url"],
    "additionalProperties": true
}